<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:background="@color/whitecolor"
  android:layout_height="match_parent">
  <ImageView 
  android:id="@+id/iv_my_video_row_video" 
  android:layout_height="60dp" 
  android:layout_width="70dp" 
 
  android:layout_alignParentLeft="true"
  android:src="@drawable/icon"/>
   <TextView 
  android:id="@+id/tv_my_video_video_name" 
  android:layout_height="wrap_content" 
  android:layout_width="wrap_content" 
  android:layout_toRightOf="@+id/iv_my_video_row_video"
  android:textColor="@color/Black"
  android:layout_marginTop="6dp"
 android:layout_marginLeft="2dp"
  android:textStyle="bold"
  android:text="Education"/>
   <TextView 
  android:id="@+id/tv_my_video_user_name" 
  android:layout_height="wrap_content" 
  android:layout_width="wrap_content" 
   android:textSize="10dp"
  android:layout_toRightOf="@+id/iv_my_video_row_video"
  android:textColor="@color/Black"
android:layout_marginLeft="2dp"
 android:layout_below="@+id/tv_my_video_video_name"
  
  android:text="by user name"/>
   <TextView 
  android:id="@+id/tv_my_video_views_comment" 
  android:layout_height="wrap_content" 
  android:layout_width="wrap_content" 
  android:layout_toRightOf="@+id/iv_my_video_row_video"
  android:textColor="@color/Black"
android:layout_marginLeft="2dp"
 android:layout_below="@+id/tv_my_video_user_name"
  android:textSize="10dp"
  android:text="2 View|1comment"/>
</RelativeLayout>
