<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/whitecolor">
<RelativeLayout 
  android:id="@+id/rr_Edituserinformation_title"
  android:layout_height="80dp" 
  android:layout_width="fill_parent"
  android:background="@drawable/topsmokeeffect"
  >
  <ImageView android:layout_width="fill_parent"
  android:layout_height="60dp"
  android:id="@+id/iv_change_password_change_password"
  android:src="@drawable/small_logo"
 />
 <TextView
  android:id="@+id/tv_change_password_change_password" 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Change Password"
  android:textColor="@color/Green"
  android:layout_alignParentBottom="true"/>
  <TextView
  android:id="@+id/tv_change_password_change_picture" 
 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Change Picture"
  android:textColor="@color/Green"
  android:layout_alignParentRight="true"
  android:layout_alignParentBottom="true"/>
  </RelativeLayout>
 <RelativeLayout
 android:id="@+id/rr_change_password_middle" 
 android:layout_height="wrap_content"
 android:layout_width="wrap_content"
 android:layout_below="@+id/rr_Edituserinformation_title">
 
  <TextView 
  android:id="@+id/tv_change_password_old_password"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Old Password :"
  android:textSize="10dp"
  android:layout_marginLeft="10dp"
  android:textColor="@color/Black"
  android:layout_marginTop="20dp"
  />
  <EditText android:id="@+id/et_change_password_old_password"
  android:layout_width="200dp"
  android:layout_height="35dp"
  android:layout_below="@+id/view_change_password_middle_line"
  android:layout_alignParentRight="true"
  android:layout_marginRight="15dp"
  android:layout_marginTop="5dp"
  android:inputType="textPassword"/>
  
  <TextView android:id="@+id/tv_change_password_new_password"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="New Password :"
  android:textSize="10dp"
  android:layout_marginLeft="10dp"
  android:textColor="@color/Black"
  android:layout_below="@+id/tv_change_password_old_password"
  android:layout_marginTop="15dp"
  />
  <EditText android:id="@+id/et_change_password_new_password"
  android:layout_width="200dp"
  android:layout_height="35dp"
  android:layout_below="@+id/et_change_password_old_password"
  android:layout_alignParentRight="true"
  android:layout_marginTop="1dp"
  android:layout_marginRight="15dp"
  android:inputType="textPassword"/>
 
 <TextView android:id="@+id/tv_change_password_confirm_password"
  android:layout_width="80dp"
  android:layout_height="wrap_content"
  android:text="Confirm New  
    Password"
  android:textSize="10dp"
   android:layout_marginLeft="10dp"
  android:textColor="@color/Black"
  android:layout_below="@+id/tv_change_password_new_password"
  
  android:layout_marginTop="20dp"
  />
  <EditText android:id="@+id/et_change_password_confirm_password"
  android:layout_width="200dp"
  android:layout_height="35dp"
 android:layout_below="@+id/et_change_password_new_password"
android:layout_alignParentRight="true"
android:layout_marginRight="15dp"
   android:layout_marginTop="1dp"
 
  android:inputType="textPassword"
  />
   </RelativeLayout>
<Button android:id="@+id/btn_change_password_change"
 android:layout_width="280dp"
  android:layout_height="35dp"
  android:text="Change"
  android:typeface="serif"
  android:layout_below="@+id/rr_change_password_middle"
  android:layout_marginLeft="15dp"
 android:layout_marginTop="10dp"
android:background="@color/Green"
/> 
</RelativeLayout>
