<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/dullwhitecolor">
  <TextView 
  android:id="@+id/tv_profile_information_label" 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Add your Profile Information"
  android:layout_marginLeft="90dp"
  android:layout_marginTop="10dp"
  android:textColor="@color/Green"/>
  <TextView android:id="@+id/tv_invite_profile_Country"
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:layout_marginTop="18dp"
  android:layout_marginLeft="5dp"
  android:layout_below="@+id/tv_profile_information_label"
  android:text="Country :"
  android:textColor="@color/Black"/>
  <Spinner 
  android:id="@+id/sp_invite_profile_Country"
  android:layout_height="40dp"
  android:layout_width="250dp"
  android:prompt="@string/Title"
  android:layout_toRightOf="@+id/tv_invite_profile_Country"
  android:layout_below="@+id/tv_profile_information_label"
  android:layout_marginLeft="1dp"
  android:layout_marginTop="10dp"/>
  
  <TextView android:id="@+id/tv_invite_profile_state"
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:layout_marginTop="20dp"
  android:layout_marginLeft="10dp"
  android:layout_below="@+id/tv_invite_profile_Country"
  android:text="State :"
  
  android:textColor="@color/Black"/>
  <Spinner 
  android:id="@+id/sp_invite_profile_state"
  android:layout_height="40dp"
  android:layout_width="250dp"
    android:prompt="@string/State"
  android:layout_below="@+id/sp_invite_profile_Country"
  android:layout_toRightOf="@+id/tv_invite_profile_state"
  android:layout_marginLeft="12dp"
  android:layout_marginTop="5dp"/>
  
  <TextView android:id="@+id/tv_invite_profile_city"
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:layout_marginTop="33dp"
  android:layout_marginLeft="10dp"
  android:layout_below="@+id/tv_invite_profile_state"
  android:text="City :"
  android:textColor="@color/Black"/>
  <Spinner 
  android:id="@+id/sp_invite_profile_city"
  android:layout_height="40dp"
  android:layout_width="250dp"
  android:prompt="@string/City"
  android:layout_below="@+id/sp_invite_profile_state"
  android:layout_toRightOf="@+id/tv_invite_profile_city"
  android:layout_marginLeft="21dp"
  android:layout_marginTop="5dp"/>
  <EditText 
  android:id="@+id/et_invite_profile_postalcode"
  android:layout_height="40dp"
  android:layout_width="250dp"
  android:hint="Postal Code"
  android:inputType="number|textNoSuggestions"
  android:layout_below="@+id/sp_invite_profile_city"
  android:layout_marginLeft="64dp"
  android:layout_marginTop="5dp"/>
  
  <TextView android:id="@+id/tv_invite_profile_Gender"
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:layout_marginTop="18dp"
  android:layout_marginLeft="6dp"
  android:layout_below="@+id/et_invite_profile_postalcode"
  android:text="Gender :"
  
  android:textColor="@color/Black"/>
  <Spinner 
  android:id="@+id/sp_invite_profile_gender"
  android:layout_height="40dp"
  android:layout_width="250dp"
  android:layout_below="@+id/et_invite_profile_postalcode"
  android:layout_toRightOf="@+id/tv_invite_profile_Gender"
  android:layout_marginLeft="6dp"
  android:layout_marginTop="5dp"/>
  <TextView android:id="@+id/tv_invite_profile_brithday"
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:layout_marginTop="18dp"
  android:layout_marginLeft="5dp"
  android:layout_below="@+id/tv_invite_profile_Gender"
  android:text="Brithday :"
  android:textColor="@color/Black"/>
  <TextView android:id="@+id/dateAndTimeLabel"
  android:layout_height="40dp"
  android:layout_width="2500dp"
  android:layout_below="@+id/tv_invite_profile_Gender"
  android:layout_toRightOf="@+id/tv_invite_profile_brithday"
  android:layout_marginLeft="5dp"
  android:layout_marginTop="20dp"
  android:textColor="@color/Black"
  android:hint="Set DateOfBirth"
  />
  <Button 
  android:id="@+id/btn_invite_profile_save"
  android:layout_width="130dp"
  android:layout_height="40dp"
  android:text="Save"
  android:paddingTop="3dp" 
  android:textColor="@color/Black"
  android:layout_below="@+id/tv_invite_profile_brithday"
  android:layout_marginLeft="160dp"
  android:layout_marginTop="20dp"/>
  <Button 
  android:id="@+id/btn_invite_profile_skip"
  android:layout_width="150dp"
  android:layout_height="40dp"
  android:text="Skip"
  android:textColor="@color/Black"
  android:background="@color/dullwhitecolor"
  android:paddingRight="100dp"
  android:layout_below="@+id/tv_invite_profile_brithday"
  android:layout_marginLeft="10dp"
  android:layout_marginTop="20dp"/>
 </RelativeLayout>
