<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:scrollbarStyle="insideOverlay">
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/Grey">
  <TextView 
  android:id="@+id/tv_play_vdieo_name"
  android:layout_width="wrap_content"
  android:layout_marginLeft="30dp"
  android:layout_marginTop ="30dp"
  android:textColor="@color/Black"
  android:layout_height="wrap_content"
  android:text="Education" />
 <ImageView android:id="@+id/iv_play_video"
   android:layout_height="300dp"
   android:src="@drawable/video_clip"
   android:layout_width="fill_parent"
   android:layout_below="@+id/tv_play_vdieo_name" />
 
    <TextView android:id="@+id/tv_play_video_rating" 
    android:layout_height="wrap_content"
    android:layout_below="@+id/rating_play_video"
    android:layout_marginLeft="7dp"
    android:layout_marginBottom="7dp"
    android:text="0 Rating"
    android:textColor="@color/Black"
    android:layout_width="wrap_content" />
     <TextView android:id="@+id/tv_play_video_comments" 
    android:layout_height="wrap_content"
     android:layout_below="@+id/rating_play_video"
     android:layout_marginLeft="7dp"
      android:layout_marginBottom="7dp"
     android:layout_toRightOf="@+id/tv_play_video_rating"
     android:text="- 0 comment"
    android:textColor="@color/Black"
    android:layout_width="wrap_content" />
    <ImageView android:id="@+id/iv_play_video_good"
    android:layout_width="wrap_content"
    android:layout_below="@+id/rating_play_video"
     android:layout_marginBottom="7dp"
    android:src="@drawable/thumbup"
     android:layout_marginLeft="24dp"
    android:layout_toRightOf="@+id/tv_play_video_comments"
    android:layout_height="wrap_content"/>
    <ImageView android:id="@+id/iv_play_video_bad"
    android:layout_width="wrap_content"
     android:layout_marginBottom="7dp"
    android:layout_below="@+id/rating_play_video"
    android:src="@drawable/thumbdown"
     android:layout_marginLeft="24dp"
    android:layout_toRightOf="@+id/iv_play_video_good"
    android:layout_height="wrap_content"/>
    <RatingBar 
    android:id="@id/rating_play_video"
    android:layout_below="@+id/iv_play_video"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content"
    android:numStars="5"
   
    android:layout_width="wrap_content" />
    
  <EditText 
  android:id="@+id/et_play_video_post_comment"
  android:layout_width="fill_parent"
  android:inputType="text|textNoSuggestions"
  android:imeOptions="actionDone"
  android:layout_below="@+id/tv_play_video_rating"
  android:layout_height="wrap_content"
  android:textSize="10dp"
  android:text="Post Comment"/>
  
  </RelativeLayout>
</ScrollView>