<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/whitecolor">
  <RelativeLayout 
  android:id="@+id/rr_CreateAlbum_title"
  android:layout_height="wrap_content" 
  android:layout_width="fill_parent"
  android:background="@drawable/topsmokeeffect">
  <ImageView 
  android:id="@+id/iv_CreateAlbum_picture"
  android:layout_width="fill_parent"
  android:layout_height="60dp"
  android:src="@drawable/small_logo"/>
  </RelativeLayout>
  <ScrollView
  android:layout_width="wrap_content"
  android:layout_height="fill_parent"
  android:layout_below="@+id/rr_CreateAlbum_title">
  <RelativeLayout
  android:layout_height="fill_parent"
  android:layout_width="wrap_content">
 <TextView
  android:id="@+id/tv_CreateAlbum_Album_Title"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Album Title :*"
  android:textSize="10dp"
  android:textColor="@color/Black"
  android:layout_marginLeft="15dp"
  android:layout_marginTop="10dp"/>
  <EditText
  android:id="@+id/et_CreateAlbum_AlbumTitle"
  android:layout_alignParentRight="true"
  android:layout_width="200dp"
  android:layout_height="38dp"
  android:inputType="text|textNoSuggestions"
  android:layout_marginRight="5dp"
  android:imeOptions="actionNext"/>
  <TextView
  android:id="@+id/tv_CreateAlbum_Album_Category"
  android:layout_below="@+id/tv_CreateAlbum_Album_Title"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Category :*"
  android:textSize="10dp" 
  android:textColor="@color/Black"
  android:layout_marginLeft="15dp"
  android:layout_marginTop="35dp"/>
  <Spinner
  android:id="@+id/sp_CreateAlbum_SelectCategory"
  android:layout_below="@+id/et_CreateAlbum_AlbumTitle"
  android:layout_alignParentRight="true"
  android:layout_width="200dp"
  android:layout_height="38dp"
  android:layout_marginRight="5dp"
  android:layout_marginTop="5dp"/>
  
  <TextView
  android:id="@+id/tv_CreateAlbum_Album_Description"
  android:layout_below="@+id/tv_CreateAlbum_Album_Category"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Album Description :"
  android:textSize="10dp"
  android:textColor="@color/Black"
  android:layout_marginLeft="15dp"
  android:layout_marginTop="27dp"/>
  <EditText
  android:id="@+id/et_CreateAlbum_DescriptionDetail"
  android:layout_below="@+id/sp_CreateAlbum_SelectCategory"
  android:layout_alignParentRight="true"
  android:layout_width="200dp"
  android:layout_height="38dp"
  android:inputType="text|textNoSuggestions"
  android:imeOptions="actionDone"
  android:layout_marginRight="5dp"
  android:layout_marginTop="5dp"/>
  
  <TextView
  android:id="@+id/tv_CreateAlbum_Album_CoverImage"
  android:layout_below="@+id/tv_CreateAlbum_Album_Description"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Album Cover:"
  android:textSize="10dp"
  android:textColor="@color/Black"
  android:layout_marginLeft="15dp"
  android:layout_marginTop="23dp"/>
  <ImageView
  android:id="@+id/iv_CreateAlbum_CoverImageSelected"
  android:layout_below="@+id/et_CreateAlbum_DescriptionDetail"
  android:layout_alignParentRight="true"
  android:src="@drawable/koala"
  android:layout_width="200dp"
  android:layout_height="100dp"
  android:layout_marginRight="5dp"
  android:layout_marginTop="5dp"/>
  <TextView
  android:id="@+id/tv_CreateAlbum_Album_UplodeImage"
  android:layout_below="@+id/iv_CreateAlbum_CoverImageSelected"
  android:layout_alignParentRight="true"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Uplode Image"
  android:textSize="12dp"
  android:textColor="@color/Green"
  android:layout_marginRight="15dp"
  android:layout_marginTop="1dp"/>
  
  <TextView
  android:id="@+id/tv_CreateAlbum_Album_Privacy"
  android:layout_below="@+id/tv_CreateAlbum_Album_UplodeImage"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Privacy :*"
  android:textSize="10dp"
  android:textColor="@color/Black"
  android:layout_marginLeft="15dp"
  android:layout_marginTop="15dp"/>
  <Spinner
  android:id="@+id/sp_CreateAlbum_Album_Privacy"
  android:layout_below="@+id/tv_CreateAlbum_Album_UplodeImage"
  android:layout_alignParentRight="true"
  android:layout_width="200dp"
  android:layout_height="38dp"
  android:layout_marginRight="5dp"
  android:layout_marginTop="2dp"/>
  
  <TextView
  android:id="@+id/tv_CreateAlbum_Album_CommentPrivacy"
  android:layout_below="@+id/tv_CreateAlbum_Album_Privacy"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Category :*"
  android:textSize="10dp"
  android:textColor="@color/Black"
  android:layout_marginLeft="15dp"
  android:layout_marginTop="30dp"/>
  <Spinner
  android:id="@+id/sp_CreateAlbum_Album_CommentPrivacy"
  android:layout_below="@+id/sp_CreateAlbum_Album_Privacy"
  android:layout_alignParentRight="true"
  android:layout_width="200dp"
  android:layout_height="38dp"
  android:layout_marginRight="5dp"
  android:layout_marginTop="2dp"/>
<Button
  android:id="@+id/btn_CreateAlbum_Save"
  android:layout_below="@+id/sp_CreateAlbum_Album_CommentPrivacy"
  android:layout_toRightOf="@+id/tv_CreateAlbum_Album_CommentPrivacy"
  android:layout_width="95dp"
  android:layout_height="30dp"
  android:text="Save"
  android:textColor="@color/whitecolor"
  android:layout_marginLeft="45dp"
  android:layout_marginTop="5dp"
  android:layout_marginBottom="5dp"
  android:background="@color/Green"/>
  <Button
  android:id="@+id/btn_CreateAlbum_Cancel"
  android:layout_below="@+id/sp_CreateAlbum_Album_CommentPrivacy"
  android:layout_toRightOf="@+id/btn_CreateAlbum_Save"
  android:layout_width="92dp"
  android:layout_height="30dp"
  android:text="Cancel"
  android:textColor="@color/whitecolor"
  android:layout_marginLeft="5dp"
  android:layout_marginTop="5dp"
  android:layout_marginBottom="5dp"
  android:background="@color/Green"/>
</RelativeLayout>
</ScrollView>
</RelativeLayout>
