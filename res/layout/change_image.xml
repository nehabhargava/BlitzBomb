<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/dullwhitecolor">
  <TextView android:id="@+id/tv_change_image_label" 
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Add your Profile Picture"
  android:layout_marginLeft="90dp"
  android:layout_marginTop="10dp"
  android:textColor="@color/Green"/>
   <ImageView android:id="@+id/iv_changeimage_big_image"
  android:layout_height="200dp"
  android:layout_below="@+id/tv_change_image_label"
  android:src="@drawable/koala"
  android:layout_marginTop="10dp"
  android:layout_width="fill_parent"/>
  <Button 
  android:id="@+id/btn_changeImage_save_continue"
  android:layout_height="40dp"
  android:layout_width="150dp"
  android:layout_below="@+id/iv_changeimage_big_image"
  android:layout_marginLeft="160dp"
  android:layout_marginTop="10dp"
  android:text="save and Continue"/>
  <Button android:id="@+id/btn_changeImage_skip"
  android:layout_height="40dp"
  android:layout_width="100dp"
  android:layout_below="@+id/iv_changeimage_big_image"
  
  android:layout_marginTop="10dp"
  android:layout_marginLeft="60dp"
  android:background="@color/dullwhitecolor"
  android:text="Skip"/>
   <Button android:id="@+id/btn_changeImage_back"
  android:layout_height="40dp"
  android:layout_width="70dp"
  android:layout_below="@+id/iv_changeimage_big_image"
  android:paddingRight="10dp"
  android:layout_marginTop="10dp"
  android:layout_marginLeft="0dp"
  android:background="@color/dullwhitecolor"
  android:text="Back"/>
</RelativeLayout>
