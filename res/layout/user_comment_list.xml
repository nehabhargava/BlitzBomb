<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="70dp"
  android:background="@color/whitecolor">
  <ImageView
  android:id="@+id/iv_user_comment_list_Image"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_centerVertical="true"
  android:src="@drawable/icon"/>
  <TextView
  android:id="@+id/tv_user_comment_list_name"
  android:layout_toRightOf="@+id/iv_user_comment_list_Image"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="User Name"
  android:textSize="10dp"
  android:layout_marginTop="10dp"
  android:textColor="@color/Black"></TextView>
  <TextView
  android:id="@+id/tv_user_comment_list_body"
  android:layout_toRightOf="@+id/tv_user_comment_list_name"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:text="Body"
  android:textSize="10dp"
  android:layout_marginLeft="10dp"
  android:layout_marginTop="10dp"
  android:textColor="@color/Black"></TextView>
  
  <TextView 
   android:id="@+id/tv_write_comment_day" 
   android:layout_height="wrap_content" 
   android:layout_marginTop="25dp"
   android:textColor="#000000"
   android:layout_marginLeft="6dp"
   android:layout_below="@+id/tv_user_comment_list_name"
    android:layout_toRightOf="@+id/iv_user_comment_list_Image"
   android:layout_width="wrap_content" 
   android:text="days"
   android:textSize="10dp"/>
    
    <ImageView 
     android:id="@+id/imbtn_write_comment_like"
     android:src="@drawable/thumbup"
     android:layout_below="@+id/tv_user_comment_list_name"
     android:layout_marginTop="17dp" 
     android:layout_marginBottom="5dp" 
     android:layout_marginLeft="20dp"
     android:textColor="#000000"
     android:layout_toRightOf="@+id/tv_write_comment_day"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content" /> 
   <TextView 
   android:id="@+id/tv_write_comment_Good" 
   android:layout_height="wrap_content" 
   android:layout_toRightOf="@+id/imbtn_write_comment_like" 
   android:layout_marginTop="25dp"
   android:layout_marginLeft="2dp"
   android:textColor="#000000"
    android:layout_below="@+id/tv_user_comment_list_name"
   android:layout_width="wrap_content" 
   android:text="(0)"
   android:textSize="10dp"/> 
   <ImageView 
    android:id="@+id/imbtn_write_comment_unlike"
    android:src="@drawable/thumbdown"
     android:layout_below="@+id/tv_user_comment_list_name"
    android:layout_marginLeft="20dp"
    android:layout_toRightOf="@+id/tv_write_comment_Good" 
    android:layout_marginTop="20dp" 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" />  
    <TextView 
   android:id="@+id/tv_write_comment_unlike" 
   android:layout_height="wrap_content" 
   android:layout_toRightOf="@+id/imbtn_write_comment_unlike" 
   android:layout_marginTop="25dp"
   android:textColor="#000000"
   android:layout_marginBottom="5dp"
   android:layout_marginLeft="2dp"
   android:layout_below="@+id/tv_user_comment_list_name"
   android:layout_width="wrap_content" 
   android:text="(0)"
   android:textSize="10dp"/> 
  
</RelativeLayout>
