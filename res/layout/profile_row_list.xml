<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:background="@color/dullwhitecolor">
  
  <TextView 
  android:id="@+id/tv_new_stream_row_user_name" 
  android:layout_height="wrap_content" 
  android:layout_width="wrap_content" 
  android:textColor="#000000"
  android:layout_marginTop="6dp"
  android:layout_marginLeft="6dp"
  android:textStyle="bold"
  android:text="user Name:"/>
   <TextView 
   android:id="@+id/tv_new_stream_row_day" 
   android:layout_height="wrap_content" 
   android:layout_marginTop="20dp"
   android:textColor="#000000"
   android:layout_marginLeft="6dp"
   android:layout_below="@+id/tv_new_stream_row_user_name"
   android:layout_width="wrap_content" 
   android:text="days"/>
  <ImageView 
   android:id="@+id/imbtn_new_stream_row"
   android:src="@drawable/comments" 
   android:layout_marginLeft="20dp"
   android:layout_below="@+id/tv_new_stream_row_user_name" 
   android:layout_toRightOf="@+id/tv_new_stream_row_day"
   android:layout_height="wrap_content" 
   android:layout_width="wrap_content" 
   android:layout_marginTop="20dp" />  
    <ImageView 
     android:id="@+id/imbtn_new_stream_row_like"
     android:src="@drawable/thumbup"
     android:layout_below="@+id/tv_new_stream_row_user_name" 
     android:layout_marginTop="17dp" 
     android:layout_marginBottom="5dp" 
     android:layout_marginLeft="20dp"
     android:textColor="#000000"
     android:layout_toRightOf="@+id/imbtn_new_stream_row"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content" /> 
   <TextView 
   android:id="@+id/tv_new_stream_row_Good" 
  android:layout_height="wrap_content" 
  android:layout_toRightOf="@+id/imbtn_new_stream_row_like" 
  android:layout_marginTop="20dp"
   android:layout_marginLeft="2dp"
   android:textColor="#000000"
  android:layout_below="@+id/tv_new_stream_row_user_name"
  android:layout_width="wrap_content" 
  android:text="Good(0)"/> 
   <ImageView 
   android:id="@+id/imbtn_new_stream_row_unlike"
    android:src="@drawable/thumbdown"
  android:layout_below="@+id/tv_new_stream_row_user_name" 
  android:layout_marginLeft="20dp"
  android:layout_toRightOf="@+id/tv_new_stream_row_Good" 
  android:layout_marginTop="20dp" 

   android:layout_height="wrap_content"
    android:layout_width="wrap_content" />  
    <TextView 
   android:id="@+id/tv_new_stream_row_unlike" 
  android:layout_height="wrap_content" 
  android:layout_toRightOf="@+id/imbtn_new_stream_row_unlike" 
  android:layout_marginTop="19dp"
  android:textColor="#000000"
   android:layout_marginBottom="5dp"
   android:layout_marginLeft="2dp"
  android:layout_below="@+id/tv_new_stream_row_user_name"
  android:layout_width="wrap_content" 
  android:text="bad(0)"/> 
   <TextView 
   android:id="@+id/tv_new_stream_row_delete" 
  android:layout_height="wrap_content" 
  android:layout_marginTop="20dp" 
  android:layout_marginLeft="15dp"
  android:textColor="#000000"
  android:layout_below="@+id/tv_new_stream_row_user_name" 
  android:layout_toRightOf="@+id/tv_new_stream_row_unlike"
  android:layout_width="wrap_content" 
  android:text="Delete"/>
</RelativeLayout>