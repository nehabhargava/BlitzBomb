<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:background="#ffffff">
  
  <TextView 
  android:id="@+id/tv_new_stream_row_user_name" 
  android:layout_height="wrap_content" 
  android:layout_width="wrap_content" 
  android:textColor="#000000"
  android:layout_marginTop="6dp"
  android:layout_marginLeft="6dp"
  android:textStyle="bold"
  android:text="user Name:"
  android:textSize="10dp"/>
  <TextView 
  android:id="@+id/tv_new_stream_row_Status"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_toRightOf="@+id/tv_new_stream_row_user_name"
  android:text="Status"
  android:textColor="@color/Black"
  android:layout_marginTop="6dp"
  android:layout_marginLeft="6dp"
  android:textSize="10dp"/>
  <TextView 
  android:id="@+id/tv_new_stream_row_body"
  android:layout_below="@+id/tv_new_stream_row_user_name"
  android:layout_width="240dp"
  android:layout_height="wrap_content"
  android:text="Status"
  android:textColor="@color/Black"
  android:layout_marginTop="6dp"
  android:layout_marginLeft="6dp"
  android:textSize="10dp"/>
  <ImageView 
  android:id="@+id/iv_new_stream_row_beer_mug" 
  android:layout_height="wrap_content" 
  android:layout_width="wrap_content" 
  android:layout_marginRight="10dp"
  android:layout_alignParentRight="true"
  android:src="@drawable/icon"/>
   <TextView 
   android:id="@+id/tv_new_stream_row_boomed" 
   android:layout_height="wrap_content" 
   android:layout_alignParentRight="true"
   android:textColor="#000000"
   android:layout_marginRight="12dp"
   android:textSize="10dp"
   android:layout_below="@+id/iv_new_stream_row_beer_mug"
   android:layout_width="wrap_content" 
   android:text="Boombed"/>
   <TextView 
   android:id="@+id/tv_new_stream_row_day" 
   android:layout_height="wrap_content" 
   android:layout_marginTop="20dp"
   android:textColor="#000000"
   android:textSize="10dp"
   android:layout_marginLeft="6dp"
   android:layout_below="@+id/tv_new_stream_row_body"
   android:layout_width="wrap_content" 
   android:text="days"/>
 
   <ImageView 
     android:id="@+id/imbtn_new_stream_row_like"
     android:src="@drawable/thumbup"
     android:layout_below="@+id/tv_new_stream_row_body" 
     android:layout_marginTop="17dp" 
     android:layout_marginBottom="5dp" 
     android:layout_marginLeft="20dp"
     android:textColor="#000000"
     android:layout_toRightOf="@+id/tv_new_stream_row_day"
     android:layout_height="wrap_content"
     android:layout_width="wrap_content" /> 
   <TextView 
    android:id="@+id/tv_new_stream_row_Good" 
    android:layout_height="wrap_content" 
    android:layout_toRightOf="@+id/imbtn_new_stream_row_like" 
    android:layout_marginTop="20dp"
    android:textSize="10dp"
    android:layout_marginLeft="2dp"
    android:textColor="#000000"
    android:layout_below="@+id/tv_new_stream_row_body"
    android:layout_width="wrap_content"/> 
    <ImageView 
    android:id="@+id/imbtn_new_stream_row_unlike"
    android:src="@drawable/thumbdown"
    android:layout_below="@+id/tv_new_stream_row_body" 
    android:layout_marginLeft="20dp"
    android:layout_toRightOf="@+id/tv_new_stream_row_Good" 
    android:layout_marginTop="20dp" 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" />  
   <TextView 
   android:id="@+id/tv_new_stream_row_unlike" 
   android:layout_height="wrap_content" 
   android:layout_toRightOf="@+id/imbtn_new_stream_row_unlike" 
   android:layout_marginTop="19dp"
   android:textColor="#000000"
   android:textSize="10dp"
   android:layout_marginBottom="5dp"
   android:layout_marginLeft="2dp"
   android:layout_below="@+id/tv_new_stream_row_body"
   android:layout_width="wrap_content"/> 
   <TextView 
   android:id="@+id/tv_new_stream_row_delete" 
   android:layout_height="wrap_content" 
   android:layout_marginTop="20dp" 
   android:layout_marginLeft="10dp"
   android:textSize="10dp"
   android:textColor="#000000"
   android:layout_below="@+id/tv_new_stream_row_body" 
   android:layout_toRightOf="@+id/tv_new_stream_row_unlike"
   android:layout_width="wrap_content" 
   android:text="Delete"/>
   <ImageView 
   android:id="@+id/imbtn_new_stream_row"
   android:src="@drawable/comments" 
   android:layout_marginLeft="10dp"
   android:layout_below="@+id/tv_new_stream_row_body" 
   android:layout_toRightOf="@+id/tv_new_stream_row_delete"
   android:layout_height="wrap_content" 
   android:layout_width="wrap_content" 
   android:layout_marginTop="20dp" />
   <RelativeLayout 
   android:id="@+id/fl_new_stream_row_comment" 
   android:layout_toRightOf="@+id/et_new_stream_row_comment"
   android:background="@color/dullwhitecolor" 
   android:layout_height="wrap_content" 
   android:layout_width="fill_parent" 
   android:layout_below="@+id/imbtn_new_stream_row">    
   
</RelativeLayout>
</RelativeLayout>
