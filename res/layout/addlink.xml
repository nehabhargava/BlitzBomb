<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:background="#FDEEF4"
  android:layout_height="match_parent">
   <EditText
   android:id="@+id/et_news_stream_postComments_add_link" 
   android:layout_width="200dp"
   android:hint="http://"
   android:maxLines="1"
   android:imeOptions="actionNone"
   android:singleLine="true"
   android:layout_height="wrap_content"/>
    <ImageView
    android:id="@+id/iv_news_stream_AddLink"
    android:src="@drawable/addlink"
    android:visibility="invisible"
    android:layout_marginTop="10dp"
    android:layout_toRightOf="@+id/et_news_stream_postComments_add_link" 
    android:layout_width="20dp" 
    android:layout_height="18dp" 
    />
</RelativeLayout>
