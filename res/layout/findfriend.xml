<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/dullwhitecolor">
  <TextView android:id="@+id/tv_findfriend_label" 
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:text="IMPORT Your E-MAIL Contact List                     Get contacts from mail services."
  android:textColor="@color/Green"
  android:layout_marginLeft="50dp"
  android:layout_marginTop="20dp"/>
  <TextView 
  android:id="@+id/tv_findfriend_Email"
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:text="Email"
  android:textColor="@color/Black"
  android:layout_marginTop="25dp"
  android:layout_marginLeft="10dp"
  android:layout_below="@+id/tv_findfriend_label"/>
  <EditText 
  android:id="@+id/et_invite_profile_email"
  android:layout_height="40dp"
  android:layout_width="250dp"
  android:hint="Email"
  android:inputType="number|textNoSuggestions"
  android:layout_toRightOf="@+id/tv_findfriend_Email"
  android:layout_below="@+id/tv_findfriend_label"
  android:layout_marginLeft="25dp"
  android:layout_marginTop="10dp"/>
  
  <TextView 
  android:id="@+id/tv_findfriend_Password"
  android:layout_height="wrap_content"
  android:layout_width="wrap_content"
  android:text="Password"
  android:textColor="@color/Black"
  android:layout_marginTop="35dp"
  android:layout_marginLeft="10dp"
  android:layout_below="@+id/tv_findfriend_Email"/>
  <EditText 
  android:id="@+id/et_invite_profile_Password"
  android:layout_height="40dp"
  android:layout_width="250dp"
  android:hint="Password"
  android:inputType="number|textNoSuggestions"
  android:layout_toRightOf="@+id/tv_findfriend_Password"
  android:layout_below="@+id/tv_findfriend_Email"
  android:layout_marginLeft="1dp"
  android:layout_marginTop="20dp"/>
  
  <TextView 
  android:id="@+id/tv_findfriend_Email_provider"
  android:layout_height="wrap_content"
  android:layout_width="55dp"
  android:text="Email Provider"
  android:textColor="@color/Black"
  android:layout_marginTop="28dp"
  android:layout_marginLeft="10dp"
  android:layout_below="@+id/tv_findfriend_Password"/>
  <Spinner 
  android:layout_width="250dp"
  android:layout_height="40dp"
   android:layout_below="@+id/et_invite_profile_Password"
   android:layout_toRightOf="@+id/tv_findfriend_Email_provider"
   android:layout_marginTop="20dp"
   android:layout_marginLeft="6dp"
 />
 <Button 
  android:id="@+id/btn_invite_profile_save"
  android:layout_width="150dp"
  android:layout_height="40dp"
  android:text="Import Contact"
  android:textSize="12dp"
  android:textColor="@color/Black"
  android:layout_alignParentBottom="true"
  android:layout_marginLeft="160dp"
  android:layout_marginTop="20dp"/>
  <Button 
  android:id="@+id/btn_invite_profile_skip"
  android:layout_width="150dp"
  android:layout_height="40dp"
  android:text="Skip"
  android:textSize="12dp"
  android:textColor="@color/Black"
  android:layout_alignParentBottom="true"
  android:layout_marginLeft="0dp"
  android:layout_marginTop="20dp"/>
</RelativeLayout>
